{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build and run c files",
            "command": "gcc ${workspaceFolder}/Source/*.c -Wall -Wextra -Wpedantic -std=c11 -o ${fileBasenameNoExtension}",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "/usr/bin/gcc"
        },
        {
            "type": "cppbuild",
            "label": "C: gcc build active file1",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-std=c11",
                "-g",
                "${workspaceFolder}/Source/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "/usr/bin/gcc"
        }
    ]
}